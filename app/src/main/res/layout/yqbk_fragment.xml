<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.easybuy.mobile.ui.fragment.YqbkFragment">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:leftIcon="@null"
        app:title="@string/home_nav_message" />

    <com.easywidgets.tablayout.EasyTabLayout
        android:id="@+id/tab_yqbk"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:tl_indicator_color="#FC383E"
        app:tl_indicator_corner_radius="2dp"
        app:tl_indicator_height="3dp"
        app:tl_indicator_margin_bottom="3dp"
        app:tl_indicator_width="22dp"
        app:tl_textSelectColor="#FC383E"
        app:tl_textSelectSize="18sp"
        app:tl_textUnselectColor="#333333"
        app:tl_textsize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EEEEEE" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_yqbk"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>