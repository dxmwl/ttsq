<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hjq.bar.TitleBar
        android:id="@+id/titleBar6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:leftIcon="@null" />
    <LinearLayout
        android:background="@color/red"
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back_left"
            app:tint="@color/white" />

        <EditText
            android:id="@+id/input_keyword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search_bg"
            android:drawableStart="@drawable/icon_home_search"
            android:drawablePadding="7dp"
            android:hint="粘贴宝贝标题，先领券在购买"
            android:imeOptions="actionSearch"
            android:lines="1"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingRight="12dp"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:textColorHint="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_6">

        <TextView
            android:id="@+id/sort_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="综合排序"
            android:textColor="#FF666666"
            android:textSize="@dimen/sp_12"
            app:drawableEndCompat="@drawable/icon_down_more" />


        <com.google.android.material.tabs.TabLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/goods_sort"
            android:layout_height="wrap_content"/>
        <com.hjq.shape.view.ShapeCheckBox
            android:id="@+id/is_youquan"
            android:paddingStart="@dimen/dp_5"
            android:textColor="#838383"
            android:textSize="@dimen/sp_10"
            android:text="仅看有券"
            android:checked="true"
            app:shape_buttonCheckedDrawable="@drawable/checkbox_checked_ic"
            app:shape_buttonDisabledDrawable="@drawable/checkbox_disable_ic"
            app:shape_buttonDrawable="@drawable/compound_normal_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_search">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/goods_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_goods" />

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</LinearLayout>