<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/dp_10">

            <ImageView
                android:id="@+id/goods_img"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>

        <com.hjq.shape.layout.ShapeLinearLayout
            android:elevation="@dimen/dp_2"
            android:orientation="vertical"
            app:shape_solidColor="@color/red"
            app:shape_radius="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_2"
            android:paddingVertical="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_8"
                android:textColor="@color/white"
                android:text="TOP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/white"
                android:layout_width="@dimen/dp_15"
                android:layout_height="0.5dp"/>
            <TextView
                android:id="@+id/paiming"
                android:textStyle="bold"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/white"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.hjq.shape.layout.ShapeLinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">


        <TextView
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="安踏不急男鞋2020年夏季新款官网男生休闲鞋鞋些…" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/youhui_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_5"
            android:paddingVertical="@dimen/dp_2"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_12"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/red"
            app:shape_strokeWidth="0.5dp"
            tools:text="满10减1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#fffc383e"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/quanhoujia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fffc383e"
                android:textSize="18sp"
                tools:text="299" />>

            <TextView
                android:id="@+id/yuanjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff999999"
                android:textSize="12sp"
                tools:text="3355" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/yhq_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:paddingLeft="7dp"
                android:paddingTop="2dp"
                android:paddingEnd="7dp"
                android:paddingBottom="2dp"
                android:textColor="#fffc383e"
                android:textSize="11sp"
                app:shape_radius="@dimen/dp_3"
                app:shape_strokeColor="#fffc383e"
                app:shape_strokeWidth="1dp"
                tools:text="50元券" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/monthly_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff999999"
                android:textSize="9sp"
                tools:text="已售2000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="店铺: "
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_9" />

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_9"
                tools:text="店铺" />
        </LinearLayout>

        <com.hjq.shape.layout.ShapeLinearLayout
            app:shape_startColor="#FFE5B9"
            app:shape_endColor="#F48F36"
            android:layout_marginTop="@dimen/dp_5"
            android:paddingStart="@dimen/dp_10"
            app:shape_radius="@dimen/dp_3"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20">

            <TextView
                android:id="@+id/tips"
                android:textColor="#953B00"
                android:textSize="@dimen/sp_8"
                android:text="近两小时已抢"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/sale_num"
                android:textColor="#953B00"
                android:textSize="@dimen/sp_12"
                android:text="10"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#953B00"
                android:textSize="@dimen/sp_8"
                android:text="件"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.hjq.shape.view.ShapeTextView
                android:text="马上抢"
                android:id="@+id/go_buy"
                app:shape_topRightRadius="@dimen/dp_3"
                app:shape_bottomRightRadius="3dp"
                app:shape_solidColor="@color/red"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_10"
                android:layout_height="match_parent"/>
        </com.hjq.shape.layout.ShapeLinearLayout>
    </LinearLayout>

</LinearLayout>