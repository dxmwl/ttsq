<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:shape_solidColor="@color/white"
    app:shape_radius="10dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_marginTop="10dp"
        android:layout_width="@dimen/dp_37"
        android:layout_height="@dimen/dp_37"
        android:src="@mipmap/launcher_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxEms="5"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="LOGO设计"
        android:textColor="#FF666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/tv_label"
        android:text="标签"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_topRightRadius="10dp"
        app:shape_bottomLeftRadius="10dp"
        android:paddingVertical="1dp"
        android:paddingHorizontal="6dp"
        app:shape_solidColor="@color/primary_color"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.hjq.shape.layout.ShapeConstraintLayout>