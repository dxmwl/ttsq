<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_100"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    android:background="#FFFFFF"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">


            <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#ff333333"
                android:textSize="10sp"
                tools:text="安踏不急男鞋2020年夏季新款官网男生休闲鞋鞋些…" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#fffc383e"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/quanhoujia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fffc383e"
                    android:textSize="13sp"
                    tools:text="299" />

                <TextView
                    android:id="@+id/yuanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff999999"
                    android:textSize="9sp"
                    tools:text="3355" />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/monthly_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff999999"
                    android:textSize="9sp"
                    tools:text="已售2000" />

                <com.hjq.shape.view.ShapeTextView
                    android:id="@+id/yhq_price"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:paddingTop="2dp"
                    app:shape_radius="@dimen/dp_10"
                    android:paddingEnd="7dp"
                    android:paddingBottom="2dp"
                    android:textColor="#fffc383e"
                    android:textSize="9sp"
                    app:shape_solidColor="#FFEDED"
                    tools:text="立省2元" />
            </RelativeLayout>

            <com.hjq.shape.view.ShapeTextView
                app:shape_strokeWidth="0.5dp"
                app:shape_strokeColor="#fffc383e"
                android:textColor="#fffc383e"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp_8"
                android:paddingVertical="@dimen/dp_2"
                android:text="领券"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>