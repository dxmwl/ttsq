<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/dp_10">

            <ImageView
                android:id="@+id/goods_img"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>

        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:elevation="@dimen/dp_2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_5"
            android:paddingVertical="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            app:shape_radius="@dimen/dp_5"
            app:shape_solidColor="@color/red">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8" />

            <View
                android:layout_width="@dimen/dp_15"
                android:layout_height="0.5dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/paiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold" />
        </com.hjq.shape.layout.ShapeLinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">


        <TextView
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="安踏不急男鞋2020年夏季新款官网男生休闲鞋鞋些…" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/youhui_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_5"
            android:paddingVertical="@dimen/dp_2"
            android:text="限时秒杀"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_12"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/red"
            app:shape_strokeWidth="0.5dp" />


        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/layout_fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            app:shape_radius="2dp"
            app:shape_solidColor="#33FC383E">

            <com.hjq.shape.view.ShapeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="返"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:shape_radius="2dp"
                app:shape_solidColor="#fffc383e" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="¥"
                android:textColor="#fffc383e"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_fan_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="5dp"
                android:textColor="#fffc383e"
                android:textSize="10sp"
                tools:text="30" />
        </com.hjq.shape.layout.ShapeLinearLayout>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#fffc383e"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/quanhoujia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fffc383e"
                android:textSize="18sp"
                tools:text="299" />>

            <TextView
                android:id="@+id/yuanjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff999999"
                android:textSize="12sp"
                tools:text="3355" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/yhq_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:paddingLeft="7dp"
                android:paddingTop="2dp"
                android:paddingEnd="7dp"
                android:paddingBottom="2dp"
                android:textColor="#fffc383e"
                android:textSize="11sp"
                app:shape_radius="@dimen/dp_3"
                app:shape_strokeColor="#fffc383e"
                app:shape_strokeWidth="1dp"
                tools:text="50元券" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/monthly_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff999999"
                android:textSize="9sp"
                tools:text="已售2000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="店铺: "
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_9" />

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_9"
                tools:text="店铺" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/kq_icon_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_marginEnd="@dimen/dp_10"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:max="100"
                android:progressDrawable="@drawable/layer_list_lesson_progress_bar"
                android:layout_height="@dimen/dp_5"/>

            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                app:shape_endColor="#F48F36"
                app:shape_radius="@dimen/dp_3"
                app:shape_startColor="#FFE5B9">

                <TextView
                    android:id="@+id/tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已抢"
                    android:textColor="#953B00"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:id="@+id/sale_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="#953B00"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="件"
                    android:textColor="#953B00"
                    android:textSize="@dimen/sp_8" />

                <com.hjq.shape.view.ShapeTextView
                    android:id="@+id/go_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:text="马上抢"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:shape_bottomRightRadius="3dp"
                    app:shape_solidColor="@color/red"
                    app:shape_topRightRadius="@dimen/dp_3" />
            </com.hjq.shape.layout.ShapeLinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>